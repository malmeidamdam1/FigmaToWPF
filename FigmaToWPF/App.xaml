<Application x:Class="FigmaToWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FigmaToWPF" 
            
             StartupUri="MainWindow.xaml"
             
             
             >
    <!--Recursos accesibles para todas las ventanas de la aplicacion-->
    <Application.Resources>
        <SolidColorBrush x:Key="colorFondoNavBar">#bbbbbb</SolidColorBrush>
        <SolidColorBrush x:Key="colorFondoPantalla">#6F868C</SolidColorBrush>

        <!-- Estilo global para todos los botones -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFFFA3A3"/>
            <!-- Puedes ajustar otros atributos del botón aquí -->
        </Style>

    </Application.Resources>
</Application>
